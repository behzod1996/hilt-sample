<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.behzoddev.hilttutorial.view.home.HomeFragment"
        android:label="Home Fragment"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/homeToDetail"
            app:destination="@id/detailFragment" />
        <argument
            android:name="photoDetails"
            app:argType="com.behzoddev.hilttutorial.data.PhotoDetails" />
    </fragment>
    <fragment
        android:id="@+id/detailFragment"
        android:name="com.behzoddev.hilttutorial.view.detail.DetailFragment"
        android:label="Detail Fragment"
        tools:layout="@layout/fragment_detail" />
</navigation>